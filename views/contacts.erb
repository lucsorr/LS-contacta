<% content_for :navbar_links do %>
  <div class="new_contact"><a href="/contacts/new">New Contact</a></div>
  <div class="search"><a href="#">Search</a></div>
  <div class="profile"><a href="#">Your Profile</a></div>
  <div class="logout"><a href="/profiles/logout">Logout</a></div>
<% end %>

<% content_for :header do %>
  <div class="main-header">
    Main header
    Welcome profile
  </div>
<% end %>

<% if @contacts.empty? %>
  <%= "You have no contacts!" %>
<% else %>
  <% @contacts.each do |id, data| %>
    <div class="card contact">
      <div class="contact-card-left">

        <img class="contact-card-logo" src="/images/contact.png" alt="Contact logo">

        <div class="contact-card-buttons">

          <form action="/contacts/edit/<%= id %>" method="get">
              <button class="contact-card-button edit">Edit</button>
          </form>

          <form action="/contacts/delete/<%= id %>" method="post">
              <button class="contact-card-button delete">Dele</button>
          </form>
          
        </div>

      </div>

      <div class="contact-card-right">

        <p class="name"><%= data['name'] %></p>
        <p><%= data['category'] %></p>
        <p><%= data['job'] %></p>
        <p><%= data['email'] %></p>
        <p><%= data['phone_number'] %></p>
        <p><%= data['city'] %></p>
        <p><%= data['notes'] %></p>
        
      </div>
    </div> 
  <% end %>
<% end %>