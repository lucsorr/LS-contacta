<form action="/profiles/signin" method="post" class="main-form">
    <label for="profile_name">Enter your name: </label>
    <input type="text" name="profile_name" minlength="3" maxlength="30" required value="<%= params[:profile_name]%>">
    <label for="password">Enter your password: </label>
    <input type="password" name="password" minlength="3" maxlength="30" required>
    <input type="submit" value="Sign in">
    <a class="new-profile-button "href="/profiles/new">Create a new profile!</a>
</form>
